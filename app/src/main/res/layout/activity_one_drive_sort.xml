<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OneDriveSort">

    <EditText
        android:id="@+id/et_input1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:digits="1234567890,"
        android:hint="list1">

    </EditText>

    <EditText
        android:id="@+id/et_input2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:digits="1234567890,"
        android:hint="list2">

    </EditText>

    <EditText
        android:id="@+id/et_input3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:digits="1234567890,"
        android:hint="list3">

    </EditText>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calculate"></Button>

    <TextView
        android:id="@+id/tv_output1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="output1">

    </TextView>

    <TextView
        android:id="@+id/tv_output2"
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:text="output2">

    </TextView>

    <TextView
        android:id="@+id/tv_output3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="output3">

    </TextView>


</LinearLayout>